<% if false %>

<form method = "post" action="/users">
  <input type="text" name="user[name]">
  <input type="email" name="user[email]">
  <input type="password" name="user[password]">
  <input type = "submit" value = "Submit it">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>"> </form>

<%= form_tag("/users", method: "post") do %>
  <%= label_tag("Name") %>
  <%= text_field_tag("user[name]") %>
  <%= label_tag("Email") %>
  <%= email_field_tag("user[email]") %>
  <%= label_tag("Password") %>
  <%= password_field_tag("user[password]") %>
  <%= submit_tag("Submit it") %>
<% end %>


<% end %>

<%= form_for @user do  |f| %>
  Username <%=f.text_field :name  ,placeholder: "Here your name"%>
  Email <%=f.email_field :email,placeholder:"Your Email" %>
  Password <%=f.password_field :password, placeholder:"Here your Password" %>
  <%= f.submit %>
<% end %>